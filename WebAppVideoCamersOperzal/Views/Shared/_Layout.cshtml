<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Видеонаблюдение за операционными залами налоговых органов округа в режиме реального времени</title>
    <link rel="stylesheet" href="~/lib/bootstrap-5.0.2/css/bootstrap.min.css" />    
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand text-start" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-video"></i>
                    Видеонаблюдение
                    <br />
                    <small class="text-black-50">за операционными залами налоговых органов округа в режиме реального времени</small>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>                
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="btn btn-outline-secondary" aria-current="page" asp-action="Status" asp-controller="Home">
                            Состояние камер
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
   
    <main>
        <div class="py-2">
            <div class="container bg-body-white">
                <div class="alert alert-danger alert-dismissible" style="display: none;" role="alert" id="main-alert-danger">
                    <i class="fas fa-triangle-exclamation"></i>
                    <span>Error text</span>
                    <button type="button" class="btn-close" aria-label="Close"></button>
                </div>

                @if (ViewBag.Breadcrumbs != null)
                {
                    <nav aria-label="breadcrumb" class="mt-3">
                        <ol class="breadcrumb breadcrumb-chevron border p-3 bg-light rounded-3">
                            <li class="breadcrumb-item">
                                <a class="link-body-emphasis text-decoration-none" asp-action="Index" asp-controller="Home">
                                    <i class="fas fa-home"></i> Главная
                                </a>
                            </li>
                            @foreach (KeyValuePair<string, string> item in ViewBag.Breadcrumbs)
                            {
                                <li class="breadcrumb-item active" aria-current="page">
                                    @if (item.Key == "")
                                    {
                                        <span>@item.Value</span>
                                    }
                                    else
                                    {
                                        <a class="link-body-emphasis text-decoration-none" href="@item.Key">@item.Value</a>
                                    }
                                </li>
                            }                           
                        </ol>
                    </nav>
                }

                <div>
                    @RenderBody()
                </div>
            </div>        
        </div>
    </main>

    <footer class="text-body-secondary py-3 mt-2 border-top">
        <div class="container">
            <p class="float-end mb-1">
                <a href="#" class="btn btn-secondary fw-bold">
                    <i class="fas fa-arrow-up"></i>
                </a>
            </p>
            <p class="mb-1">&copy; @DateTime.Today.Year.ToString() - УФНС России по Ханты-Мансийскому автономному округу - Югре</p>            
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--script src="~/lib/bootstrap-5.0.2/js/bootstrap.min.js"></script-->
    <script src="~/lib/bootstrap-5.0.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script>
        /* global bootstrap: false */
        (() => {
            /*
            'use strict'
            const tooltipTriggerList = Array.from(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.forEach(tooltipTriggerEl => {
                new bootstrap.Tooltip(tooltipTriggerEl)
            })            
            */
            $('#main-alert-danger .btn-close').on('click', function() {
                $(this).parent('div').hide()
            })
        })()
    </script>
</body>
</html>